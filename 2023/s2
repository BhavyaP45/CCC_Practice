
num_mountains = int(input())
array_mountains = input().split()

array_mountains = [int(i) for i in array_mountains]

lowest_asymmetric_values = []

#Used to calculate the asymmetric for each number i
for x in range(1, num_mountains + 1):
  l = 0
  r = x
  list_for_each_crop = []
  for i in range(1,x):
    result = abs(array_mountains[l]- array_mountains[r])
    list_for_each_crop.append(result)
    if x > 1:
      l += 1
      r -= 1


    
